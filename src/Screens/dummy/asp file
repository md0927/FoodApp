[HttpGet("carousel")]
public IActionResult GetCarouselImages()
{
    var ids = new List<int> { 3, 7, 11, 14 };
    var images = _context.FoodItems
                         .Where(item => ids.Contains(item.Id))
                         .Select(item => new { item.Id, item.ImageUrl })
                         .ToList();
    return Ok(images);
}
